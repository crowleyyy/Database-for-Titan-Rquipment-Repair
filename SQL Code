-- Create PlaceA table
CREATE TABLE IF NOT EXISTS PlaceA (
  SerialNumber INT,
  LastServiceDate DATE CHECK (LastServiceDate <= CURDATE()),
  LastServiceDone VARCHAR(255),
  NextPNMDate DATE,
  NeedsParts ENUM('true', 'false', 'part ordered'),
  PartName VARCHAR(255) DEFAULT NULL,
  PartsArrived ENUM('true', 'false', 'N/A')
);

-- Create PlaceB table
CREATE TABLE IF NOT EXISTS PlaceB (
  SerialNumber INT,
  LastServiceDate DATE CHECK (LastServiceDate <= CURDATE()),
  LastServiceDone VARCHAR(255),
  NextPNMDate DATE,
  NeedsParts ENUM('true', 'false', 'part ordered'),
  PartName VARCHAR(255) DEFAULT NULL,
  PartsArrived ENUM('true', 'false', 'N/A')
);

-- Create PlaceDetails table
CREATE TABLE IF NOT EXISTS PlaceDetails (
  PlaceName VARCHAR(255),
  Location VARCHAR(255),
  PhoneNumber VARCHAR(20)
);

-- Insert sample rows into PlaceDetails table
INSERT INTO PlaceDetails (PlaceName, Location, PhoneNumber)
VALUES
  ('Place A', 'Location A', '123-456-7890'),
  ('Place B', 'Location B', '987-654-3210');

-- Create Users table
CREATE TABLE IF NOT EXISTS Users (
  UserID INT PRIMARY KEY AUTO_INCREMENT,
  Username VARCHAR(255) UNIQUE,
  Password VARCHAR(255),
  Email VARCHAR(255),
  CreatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Insert admin user record
INSERT INTO Users (Username, Password, Email)
VALUES ('admin', 'admin_password', 'admin@example.com');
